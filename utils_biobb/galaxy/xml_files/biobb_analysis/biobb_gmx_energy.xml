<tool id="biobb_analysis_gmx_energy_ext" name="GmxEnergy" version="3.7.0" >
    <description>: Wrapper of the GROMACS energy module for extracting energy components from a given GROMACS energy file.</description>
    <requirements>
        <requirement type="package"
        version="3.7.0"
        >biobb_analysis</requirement>
    </requirements>
    <command detect_errors="aggressive"><![CDATA[
        
          ln -f -s ${input_energy_path} ${input_energy_path}.${input_energy_path.ext};
        
        #if $config.sele == "option1":
            ln -s -f ${config.properties} ${config.properties}.${config.properties.ext};
          #end if
        
        gmx_energy

        #if $config.sele == "option1":
            --config ${config.properties}.${config.properties.ext}
          #else if $config.sele == "option2":
            --config '${config.jsonstr}'
          #else if $config.sele == "option3":
            --config "__oc____dq__xvg__dq__:__dq__${properties.xvg}__dq__,__dq__terms__dq__:__ob____dq__${'__dq__,__dq__'.join($properties.terms)}__dq____cb__,__dq__gmx_path__dq__:__dq__${properties.gmx_path}__dq____cc__"
          #end if
        
          #if str($input_energy_path) != 'None':
            --input_energy_path ${input_energy_path}.${input_energy_path.ext}
          #end if
        
        
          --output_xvg_path $__new_file_path__/$outname_output_xvg_path
        ;          
        #if $config.sele == "option1":
            rm -f ${config.properties}.${config.properties.ext};
          #end if
        
          rm -f ${input_energy_path}.${input_energy_path.ext};
        
        
          if test -f $__new_file_path__/$outname_output_xvg_path; then mv $__new_file_path__/$outname_output_xvg_path $output_xvg_path; fi;
        
    ]]>
    </command>
    <inputs>
        
          <param name="input_energy_path" type="data" format="edr"  optional="False" label="input EDR file" help="Path to the input EDR file. Format: [input].edr"/> 
        
        
          <param name="outname_output_xvg_path" type="text" value="mygmx_energy.xvg" 
              optional="False" label="output XVG name" 
              help="Path to the XVG output file Format: [output].xvg "/>
        
        <conditional name="config">
            <param name="sele" type="select" label="Take tool settings:" help="Select where tool settings are to be read from">
