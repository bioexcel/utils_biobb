<tool id="biobb_amber_process_minout_ext" name="ProcessMinout" version="3.7.1" >
    <description>: Wrapper of the AmberTools (AMBER MD Package) process_minout tool module.</description>
    <requirements>
        <requirement type="package"
        version="3.7.1"
        >biobb_amber</requirement>
    </requirements>
    <command detect_errors="aggressive"><![CDATA[
        
          ln -f -s ${input_log_path} ${input_log_path}.${input_log_path.ext};
        
        #if $config.sele == "option1":
            ln -s -f ${config.properties} ${config.properties}.${config.properties.ext};
          #end if
        
        process_minout

        #if $config.sele == "option1":
            --config ${config.properties}.${config.properties.ext}
          #else if $config.sele == "option2":
            --config '${config.jsonstr}'
          #else if $config.sele == "option3":
            --config '__oc____dq__terms__dq__:__ob____dq__${'__dq__,__dq__'.join($properties.terms)}__dq____cb____cc__'
          #end if
        
          #if str($input_log_path) != 'None':
            --input_log_path ${input_log_path}.${input_log_path.ext}
          #end if
        
        
          --output_dat_path $__new_file_path__/$outname_output_dat_path
        ;          
        #if $config.sele == "option1":
            rm -f ${config.properties}.${config.properties.ext};
          #end if
        
          rm -f ${input_log_path}.${input_log_path.ext};
        
        
          if test -f $__new_file_path__/$outname_output_dat_path; then mv $__new_file_path__/$outname_output_dat_path $output_dat_path; fi;
        
    ]]>
    </command>
    <inputs>
        
          <param name="input_log_path" type="data" format="log,out,txt,o"  optional="False" label="input LOG,OUT,TXT,O file" help="AMBER (sander) Minimization output (log) file. Format: [input].[format]"/> 
        
        
          <param name="outname_output_dat_path" type="text" value="myprocess_minout.dat" 
              optional="False" label="output DAT,TXT,CSV name" 
              help="Dat output file containing data from the specified terms along the minimization process Format: [output].[format] "/>
        
        <conditional name="config">
            <param name="sele" type="select" label="Take tool settings:" help="Select where tool settings are to be read from">
              <option value="option3">Manual Input</option>
              <option value="option1">from configuration file</option>
              <option value="option2">from JSON string</option>
            </param>
            <when value="option1">
              <param name="properties" type="data" format="yml,json" optional="false" label="Configuration file" help="File containing tool settings. See below for the syntax"/>
            </when>
            <when value="option2">
              <param name="jsonstr" type="text" value="{}" optional="false" label="JSON string" help="JSON string containing tool settings. See below for the syntax"/>
            </when>
            <when value="option3">
            </when>
          </conditional>
          <section name="properties" title="Properties Input">
            
              <param name="terms" type="select" label="terms" help="Statistics descriptors. " multiple="True">
                  
                    <option value="ANGLE" 
                      
                    >ANGLE
                       
                    </option>
                  
                    <option value="BOND" 
                      
                    >BOND
                       
                    </option>
                  
                    <option value="DIHEDRAL" 
                      
                    >DIHEDRAL
                       
                    </option>
                  
                    <option value="EEL" 
                      
                    >EEL
                       
                    </option>
                  
                    <option value="EEL14" 
                      
                    >EEL14
                       
                    </option>
                  
                    <option value="ENERGY" 
                      
                    >ENERGY
                       
                    </option>
                  
                    <option value="GMAX" 
                      
                    >GMAX
                       
                    </option>
                  
                    <option value="HBOND" 
                      
                    >HBOND
                       
                    </option>
                  
                    <option value="NAME" 
                      
                    >NAME
                       
                    </option>
                  
                    <option value="NSTEP" 
                      
                    >NSTEP
                       
                    </option>
                  
                    <option value="NUMBER" 
                      
                    >NUMBER
                       
                    </option>
                  
                    <option value="RESTRAINT" 
                      
                    >RESTRAINT
                       
                    </option>
                  
                    <option value="RMS" 
                      
                    >RMS
                       
                    </option>
                  
                    <option value="VDW14" 
                      
                    >VDW14
                       
                    </option>
                  
                    <option value="VDWAALS" 
                      
                    >VDWAALS
                       
                    </option>
                  
                </param>
            
              <param name="output_format" type="select" label="output_format" help="Format of the output file" multiple="">
                  
                    <option value="dat" 
                      
                    >dat
                       
                    </option>
                  
                    <option value="txt" 
                      
                    >txt
                       
                    </option>
                  
                    <option value="csv" 
                      
                    >csv
                       
                    </option>
                  
                </param>
                    
          </section>
    </inputs>
    <outputs>
        
        <data name="output_dat_path" format="text" label="${outname_output_dat_path}">
            <change_format>
            
            <when input="properties.output_format" value="dat" format="dat" />
            
            <when input="properties.output_format" value="txt" format="txt" />
            
            <when input="properties.output_format" value="csv" format="csv" />
            
            </change_format>
          </data>
        
    </outputs>
    <tests>
        <test>
        </test>
    </tests>    
